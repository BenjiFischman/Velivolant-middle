{
  "name": "middleware",
  "version": "1.0.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "nodemon app.js",
    "dev:debug": "nodemon --inspect app.js",
    "dev:watch": "nodemon --watch  -e js,json server/app.js",
    "dev:full": "npm run redis:start && npm run dev",
    "dev:full:watch": "npm run redis:start && npm run dev:watch",
    "db:migrate": "node db/runMigrations.js",
    "db:setup": "npm run db:migrate",
    "build": "npm run clean && npm run build:js && npm run copy-files",
    "build:js": "babel src -d dist --copy-files",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=database.test.js",
    "test:db": "jest database.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "clean": "rimraf dist",
    "copy-files": "copyfiles -u 1 \"src/**/*.{json,yaml,html,css}\" dist",
    "db:migrate:sequelize": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all",
    "db:reset": "sequelize-cli db:drop && sequelize-cli db:create && npm run db:migrate && npm run db:seed",
    "redis:start": "./scripts/redis.sh start",
    "redis:stop": "./scripts/redis.sh stop",
    "redis:restart": "./scripts/redis.sh restart",
    "redis:status": "./scripts/redis.sh status",
    "redis:start:local": "USE_DOCKER=false ./scripts/redis.sh start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "start": "node -r dotenv/config dist/server.js",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "postinstall": "simple-git-hooks",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "validate": "npm run lint && npm run test"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "express-validator": "^7.0.1",
    "ioredis": "^5.5.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.0",
    "@jest/test-sequencer": "^29.7.0",
    "babel-jest": "^29.7.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.2",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "supertest": "^6.3.3"
  }
}
